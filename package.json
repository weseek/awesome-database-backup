{
  "name": "@awesome-database-backup/awesome-database-backup",
  "version": "0.3.2",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*",
    "misc/*"
  ],
  "dependencies": {},
  "devDependencies": {
    "@types/node": "^22",
    "@typescript-eslint/eslint-plugin": "^5.22.0",
    "@typescript-eslint/parser": "^5.22.0",
    "@vitest/coverage-v8": "^3.0.8",
    "@vitest/eslint-plugin": "1.1.38",
    "@vitest/ui": "^3.0.8",
    "babel-eslint": "^10.1.0",
    "commander": "^9.2.0",
    "eslint": "^8.14.0",
    "eslint-config-weseek": "^1.1.0",
    "eslint-import-resolver-typescript": "^2.7.1",
    "eslint-plugin-import": "^2.26.0",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "ts-node": "^10.7.0",
    "ts-node-dev": "^1.1.8",
    "tsc-alias": "^1.6.7",
    "turbo": "^2.4.2",
    "typescript": "^4.6.4",
    "vitest": "^3.0.8",
    "vitest-ctrf-json-reporter": "^0.0.2",
    "vitest-mock-extended": "^3.0.1"
  },
  "scripts": {
    "build": "turbo run build",
    "test": "turbo run test --concurrency=1",
    "test:performance:stream_mode": "turbo run test:performance:stream_mode",
    "test:performance:tempfile_mode": "turbo run test:performance:tempfile_mode",
    "lint": "turbo run lint",
    "rimraf": "rimraf",
    "clean": "npm run rimraf **/coverage **/.turbo apps/*/dist packages/*/dist misc/*/dist",
    "bump-version": "bump-version",
    "bump-version:major": "npm run bump-version -- -i major",
    "bump-version:minor": "npm run bump-version -- -i minor",
    "bump-version:patch": "npm run bump-version -- -i patch"
  },
  "engines": {
    "node": ">= 22 < 23",
    "yarn": ">= 1.22.22"
  },
  "packageManager": "yarn@1.22.15"
}
