{
  "name": "@awesome-database-backup/awesome-database-backup",
  "version": "0.1.2",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*",
    "misc/*"
  ],
  "dependencies": {},
  "devDependencies": {
    "@types/jest": "^27.5.0",
    "@types/node": "^16.11.17",
    "@typescript-eslint/eslint-plugin": "^5.22.0",
    "@typescript-eslint/parser": "^5.22.0",
    "babel-eslint": "^10.1.0",
    "commander": "^9.2.0",
    "eslint": "^8.14.0",
    "eslint-config-weseek": "^1.1.0",
    "eslint-import-resolver-typescript": "^2.7.1",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^26.1.5",
    "jest": "^27.4.5",
    "ts-jest": "^27.1.2",
    "ts-node": "^10.7.0",
    "ts-node-dev": "^1.1.8",
    "tsc-alias": "^1.6.7",
    "turbo": "^1.2.8",
    "typescript": "^4.6.4",
    "rimraf": "^3.0.2",
    "npm-run-all": "^4.1.5"
  },
  "scripts": {
    "build": "turbo run build",
    "test": "turbo run test --concurrency='100%'",
    "lint": "turbo run lint",
    "rimraf": "rimraf",
    "clean": "npm run rimraf **/coverage **/.turbo apps/*/dist packages/*/dist misc/*/dist",
    "bump-version": "bump-version",
    "bump-version:major": "npm run bump-version -- -i major",
    "bump-version:minor": "npm run bump-version -- -i minor",
    "bump-version:patch": "npm run bump-version -- -i patch"
  },
  "packageManager": "yarn@1.22.15",
  "turbo": {
    "pipeline": {
      "build": {
        "dependsOn": [
          "^build"
        ],
        "outputs": [
          "dist/**"
        ]
      },
      "test": {
        "dependsOn": [],
        "outputs": [
          "coverage/**"
        ]
      },
      "lint": {
        "outputs": []
      }
    }
  }
}
